
<div id="content">
    <ul id="tabs" class="nav nav-tabs nav-justified" data-tabs="tabs">
        <li class="active">
            <a data-toggle="tab" href="#user">
                <span class="glyphicon glyphicon-user"></span>
            </a>
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <a data-toggle="tab" href="#add">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </li>

            <li>
                <a data-toggle="tab" href="#tasks">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
            </li>

        }
    </ul>

    <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="user">
            @if (!User.Identity.IsAuthenticated)
            {
                @Html.Partial("Login");
            }
            else
            {
                @Html.Partial("Logout");
            }
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="tab-pane" id="add">

                <div class="well">
                    <br><br><br><br><br><br>

                    @Ajax.ActionLink("Create product", "CreateProduct", "Home", new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "main",
                   LoadingElementId = "loadingIndicator",

               },
                new { @type = "button", @class = "btn btn-block btn-primary" })
                </div>




            </div>

            <div class="tab-pane" id="tasks">
                <div class="well">


                    @Ajax.ActionLink("Show my sales", "ShowMySales", "Home", new AjaxOptions
               {
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "main",
                   LoadingElementId = "loadingIndicator"
               },
                                                        new { @type = "button", @class = "btn btn-block btn-primary" })


                   

                </div>
            </div>
        }
    </div>
    </div>